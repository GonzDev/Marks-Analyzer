<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MyAppTheme" parent="@style/AppBaseTheme">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorSecondary">@color/color_text_secondary</item>
        <item name="colorControlHighlight">@color/color_text_secondary</item>
        <item name="android:itemTextAppearance">@style/MyAppTheme.Menu</item>
    </style>

    <style name="MyAppTheme.ToolbarStyle" parent="MyAppTheme">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/toolbar_text_color_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color_primary</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="android:elevation">@dimen/action_bar_elevation</item>
    </style>

    <style name="MyAppTheme.TabLayoutStyle" parent="MyAppTheme.ToolbarStyle">
        <item name="android:textColorPrimary">@color/toolbar_text_color_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color_secondary</item>
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="MyAppTheme.Menu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

</resources>
