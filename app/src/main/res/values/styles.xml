<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="CustomHolo" parent="_CustomHolo"/>

    <style name="_CustomHolo" parent="@style/AppBaseTheme">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorSecondary">@color/color_text_secondary</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">@color/color_secondary</item>

    </style>

    <style name="ToolbarStyle" parent="AppBaseTheme">

        <item name="colorPrimary">@color/toolbar_color_primary</item>
        <item name="android:textColorPrimary">@color/toolbar_text_color_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color_secondary</item>
        <item name="colorAccent">@color/toolbar_color_accent</item>

    </style>

</resources>
