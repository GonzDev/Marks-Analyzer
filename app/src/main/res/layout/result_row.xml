<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/act_report_padding"
    android:paddingLeft="@dimen/act_report_padding"
    android:paddingTop="@dimen/frag_list_padding_top"
    android:paddingBottom="@dimen/frag_list_padding_bottom"
    android:background="@drawable/selector_list_item">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/row_text_size"/>

    <TextView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/row_text_size"/>

</LinearLayout>

