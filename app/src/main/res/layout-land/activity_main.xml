<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/main_horizontal_margin"
    android:paddingLeft="@dimen/main_horizontal_margin"
    android:paddingTop="@dimen/main_vertical_margin"
    android:paddingBottom="@dimen/main_vertical_margin"
    tools:context=".MainActivity" >

	<EditText 
	    android:id="@+id/editTextDNI"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/editTextPASS"
		android:layout_alignLeft="@+id/editTextPASS"
		android:layout_alignStart="@+id/editTextPASS"
      	android:layout_alignRight="@+id/editTextPASS"
      	android:layout_alignEnd="@+id/editTextPASS"	    
	    android:hint="@string/dni"
      	android:textColorHighlight="@android:color/black"
      	android:inputType="textPassword"/>
	
	<EditText
	    android:id="@+id/editTextPASS"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   	android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
      	android:layout_alignParentStart="true"
      	android:layout_alignParentRight="true"
      	android:layout_alignParentEnd="true"
      	android:hint="@string/pass"
      	android:textColorHighlight="@android:color/black"      	
	    android:inputType="textPassword"/>
	
	<EditText
	    android:id="@+id/editTextURL"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/editTextPASS"
	    android:layout_alignLeft="@+id/editTextPASS"
		android:layout_alignStart="@+id/editTextPASS"
      	android:layout_alignRight="@+id/editTextPASS"
      	android:layout_alignEnd="@+id/editTextPASS"	   	    
	    android:hint="@string/url"
      	android:textColorHighlight="@android:color/black"
      	android:inputType="textUri"/>
	
	<Button
	 	android:id="@+id/buttonStart"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:layout_below="@+id/editTextURL"
      	android:layout_centerHorizontal="true"
      	android:layout_marginTop="10dp"
      	android:text="@string/buttonText"
      	android:onClick="start"/>

</RelativeLayout>
