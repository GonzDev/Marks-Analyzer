<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/act_main_padding"
    tools:context=".MainActivity" >

	<EditText 
	    android:id="@+id/editTextDNI"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/editTextPASS"
		android:layout_alignLeft="@+id/editTextPASS"
		android:layout_alignStart="@+id/editTextPASS"
      	android:layout_alignRight="@+id/editTextPASS"
      	android:layout_alignEnd="@+id/editTextPASS"	    
	    android:hint="@string/edittext_dni_hint"
      	android:textColorHighlight="@android:color/black"
      	android:inputType="textPassword"/>
	
	<EditText
	    android:id="@+id/editTextPASS"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   	android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
      	android:layout_alignParentStart="true"
      	android:layout_alignParentRight="true"
      	android:layout_alignParentEnd="true"
      	android:hint="@string/edittext_pass_hint"
      	android:textColorHighlight="@android:color/black"      	
	    android:inputType="textPassword"/>
	
	<EditText
	    android:id="@+id/editTextURL"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/editTextPASS"
	    android:layout_alignLeft="@+id/editTextPASS"
		android:layout_alignStart="@+id/editTextPASS"
      	android:layout_alignRight="@+id/editTextPASS"
      	android:layout_alignEnd="@+id/editTextPASS"	   	    
	    android:hint="@string/edittext_url_hint"
      	android:textColorHighlight="@android:color/black"
      	android:inputType="textUri"/>
	
	<Button
	 	android:id="@+id/buttonStart"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:layout_below="@+id/editTextURL"
      	android:layout_centerHorizontal="true"
      	android:layout_marginTop="10dp"
      	android:text="@string/button_start_text"
      	android:onClick="start"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextDNI"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>
